{% extends 'base.html.twig' %}

{% block title %}entrées{% endblock %}

{% block body %}
    <h1>Entrées</h1>

<table class="table">
         <thead>
            <tr>
                <th>Id</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for entree in entrees%}
            <tr>
                <td>{{ entree.id }}</td>
                <td>
                    <a style="color:black; text-decoration:none" href="{{ asset('entree/'~ entree.id ~'/edit') }}">{{ entree.produit }}</a>
                </td>
                <td>{{ entree.quantite }}</td>
                <td>{{ entree.prix }}</td>
                <td>{{ entree.Date ? entree.Date|date('Y-m-d') : '' }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a style="color:black; text-decoration:none" href="{{ path('app_entree_index') }}">back to list</a>
{% endblock %}
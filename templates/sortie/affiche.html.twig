{% extends 'base.html.twig' %}

{% block title %}sortie{% endblock %}

{% block body %}
    <h1>sorties</h1>

<table class="table">
         <thead>
            <tr>
                <th>Id</th>
                <th>Produit</th>
                <th>Quantit√©</th>
                <th>Prix</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for sortie in sorties%}
            <tr>
                <td>{{ sortie.id }}</td>
                <td>
                    <a style="color:black; text-decoration:none" href="{{ asset('sortie/'~ sortie.id ~'/edit') }}">{{ sortie.produit }}</a>
                </td>
                <td>{{ sortie.quantite }}</td>
                <td>{{ sortie.prix }}</td>
                <td>{{ sortie.Date ? sortie.Date|date('Y-m-d') : '' }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a style="color:black; text-decoration:none" href="{{ path('app_sortie_index') }}">back to list</a>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

<table class="table">
         <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
            {% for cat in categories%}
            <tr>
                <td>{{ cat.id }}</td>
                <td>
                    <a style="color:black; text-decoration:none" href="{{ asset('categorie/'~ cat.id ~'/edit') }}">{{ cat.Nom }}</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a style="color:black; text-decoration:none" href="{{ path('app_categorie_index') }}">back to list</a>
{% endblock %}